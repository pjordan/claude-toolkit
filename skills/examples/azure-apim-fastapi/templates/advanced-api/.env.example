# Application
APP_NAME=advanced-apim-api
VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# APIM
APIM_GATEWAY_URL=https://your-apim.azure-api.net
VALIDATE_SUBSCRIPTION_KEY=true

# Azure AD / Entra ID
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_AUDIENCE=api://your-api

# Database (optional)
DATABASE_URL=postgresql://user:pass@localhost:5432/db

# Redis (optional)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
